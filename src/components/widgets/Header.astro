---
import { Icon } from 'astro-icon/components';
import Logo from '~/components/Logo.astro';
import ToggleTheme from '~/components/common/ToggleTheme.astro';
import ToggleMenu from '~/components/common/ToggleMenu.astro';
import Button from '~/components/ui/Button.astro';

import { getHomePermalink } from '~/utils/permalinks';
import { trimSlash, getAsset } from '~/utils/permalinks';
import type { CallToAction } from '~/types';
import LanguageSwitcher from '~/components/common/LanguageSwitcher.astro';
import { getLangFromUrl, useTranslations } from '~/i18n/utils';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface MenuLink extends Link {
  links?: Array<MenuLink>;
}

export interface Props {
  id?: string;
  links?: Array<MenuLink>;
  actions?: Array<CallToAction>;
  isSticky?: boolean;
  isDark?: boolean;
  isFullWidth?: boolean;
  showToggleTheme?: boolean;
  showRssFeed?: boolean;
  position?: string;
}

const {
  id = 'header',
  links = [],
  actions = [],
  isSticky = false,
  isDark = false,
  isFullWidth = false,
  showToggleTheme = false,
  position = 'center',
} = Astro.props;

const currentPath = `/${trimSlash(new URL(Astro.url).pathname)}`;

// i18n support
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Update links with i18n
const updatedLinks = links.map(link => {
  // Development dropdown
  if (link.text === 'Development') {
    return {
      ...link,
      text: lang === 'tr' ? 'Shopify' : 'Development',
      links: link.links?.map(subLink => {
        if (subLink.text === 'Shopify & Shopify Plus Development') {
          return {
            ...subLink,
            text: lang === 'tr' ? 'Shopify & Shopify Plus Geliştirme' : 'Shopify & Shopify Plus Development',
            href: lang === 'tr' ? '/tr/shopify-gelistirme' : '/homes/shopifydevelopment'
          };
        }
        if (subLink.text === 'Shopify Speed Optimization') {
          return {
            ...subLink,
            text: lang === 'tr' ? 'Shopify Sitenizi Hızlandıralım' : 'Shopify Speed Optimization',
            href: lang === 'tr' ? '/tr/shopify-hiz-optimizasyonu' : '/homes/speedoptimization'
          };
        }
        if (subLink.text === 'Shopify Migration') {
          return {
            ...subLink,
            text: lang === 'tr' ? 'Sitenizi Shopify\'a Taşıyalım' : 'Shopify Migration',
            href: lang === 'tr' ? '/tr/migration' : '/homes/shopifymigration'
          };
        }
        if (subLink.text === 'Shopify Consulting') {
          return {
            ...subLink,
            text: lang === 'tr' ? '360 Shopify Danışmanlığı' : 'Shopify Consulting',
            href: lang === 'tr' ? '/tr/shopify-danismanlik' : '/homes/shopifyconsulting'
          };
        }
        return subLink;
      })
    };
  }

  // AI Development dropdown
  if (link.text === 'AI Development') {
    return {
      ...link,
      text: lang === 'tr' ? 'Yapay Zeka Çözümlerimiz' : 'AI Development',
      links: link.links?.map(subLink => {
        if (subLink.text === 'ChatGPT integration') {
          return {
            ...subLink,
            text: lang === 'tr' ? 'Chatgpt Entegrasyonu' : 'ChatGPT integration',
            href: lang === 'tr' ? '/tr/chatgpt-entegrasyon' : '/homes/chatgptintegration'
          };
        }
        if (subLink.text === 'AI chatbot development') {
          return {
            ...subLink,
            text: lang === 'tr' ? 'Yapay Zeka Asistanı' : 'AI chatbot development',
            href: lang === 'tr' ? '/tr/chatbot' : '/homes/aichatbotdevelopment'
          };
        }
        return subLink;
      })
    };
  }

  // Portfolio
  if (link.text === 'Portfolio') {
    return {
      ...link,
      text: t('nav.portfolio'),
      href: lang === 'tr' ? '/tr/portfolyo' : '/portfolio'
    };
  }

  // Our Shopify Themes
  if (link.text === 'Our Shopify Themes') {
    return {
      ...link,
      text: lang === 'tr' ? 'Temalarımız' : 'Our Shopify Themes',
      href: lang === 'tr' ? '/tr/shopify-temalarimiz' : '/themes/our-themes'
    };
  }

  // Blog
  if (link.text === 'Blog') {
    return {
      ...link,
      text: t('nav.blog'),
      href: lang === 'tr' ? '/tr/blog' : '/blog'
    };
  }

  // About
  if (link.text === 'About') {
    return {
      ...link,
      text: t('nav.about'),
      href: lang === 'tr' ? '/tr/hakkimizda' : '/about'
    };
  }

  // Diğer dropdown'lar için genel işlem
  if (link.links) {
    return {
      ...link,
      links: link.links.map(subLink => subLink)
    };
  }

  return link;
});

// Update actions with i18n - Her zaman dil bazlı oluştur
const updatedActions = [{
  text: t('nav.getaquote'),
  href: lang === 'tr' ? '/tr/teklif-al' : '/getaquote',
  variant: 'primary'
}];
---

<header
  class:list={[
    { sticky: isSticky, relative: !isSticky, dark: isDark },
    'top-0 z-40 flex-none mx-auto w-full border-b border-gray-50/0 transition-[opacity] ease-in-out',
  ]}
  {...isSticky ? { 'data-aw-sticky-header': true } : {}}
  {...id ? { id } : {}}
>
  <div class="absolute inset-0"></div>
  <div
    class:list={[
      'relative text-default py-3 px-3 md:px-6 mx-auto w-full',
      'md:flex md:justify-between md:items-center md:gap-8',
      {
        'max-w-7xl': !isFullWidth,
      },
    ]}
  >
    <div class:list={[{ 'mr-auto rtl:mr-0 rtl:ml-auto': position === 'right' }, 'flex justify-between']}>
      <a class="flex items-center" href={lang === 'tr' ? '/tr' : '/'}>
        <Logo />
      </a>
      <div class="flex items-center md:hidden">
        <ToggleMenu />
      </div>
    </div>
    <nav
      class="items-center w-full md:w-auto hidden md:flex md:mx-5 text-default overflow-y-auto overflow-x-hidden md:overflow-y-visible md:overflow-x-auto md:justify-self-center"
      aria-label="Main navigation"
    >
      <ul
        class="flex flex-col md:flex-row md:self-center w-full md:w-auto text-xl md:text-[0.9375rem] tracking-[0.01rem] font-medium md:justify-center"
      >
        {
          updatedLinks.map(({ text, href, links }) => (
            <li class={links?.length ? 'dropdown' : ''}>
              {links?.length ? (
                <>
                  <button
                    type="button"
                    class="hover:text-link dark:hover:text-white px-4 py-3 flex items-center whitespace-nowrap"
                  >
                    {text}{' '}
                    <Icon name="tabler:chevron-down" class="w-3.5 h-3.5 ml-0.5 rtl:ml-0 rtl:mr-0.5 hidden md:inline" />
                  </button>
                  <ul class="dropdown-menu md:backdrop-blur-md dark:md:bg-dark rounded md:absolute pl-4 md:pl-0 md:hidden font-medium md:bg-white/90 md:min-w-[200px] drop-shadow-xl">
                    {links.map(({ text: text2, href: href2 }) => (
                      <li>
                        <a
                          class:list={[
                            'first:rounded-t last:rounded-b md:hover:bg-gray-100 hover:text-link dark:hover:text-white dark:hover:bg-gray-700 py-2 px-5 block whitespace-no-wrap',
                            { 'aw-link-active': href2 === currentPath },
                          ]}
                          href={href2}
                        >
                          {text2}
                        </a>
                      </li>
                    ))}
                  </ul>
                </>
              ) : (
                <a
                  class:list={[
                    'hover:text-link dark:hover:text-white px-4 py-3 flex items-center whitespace-nowrap',
                    { 'aw-link-active': href === currentPath },
                  ]}
                  href={href}
                >
                  {text}
                </a>
              )}
            </li>
          ))
        }
      </ul>
    </nav>
    <div
      class:list={[
        { 'ml-auto rtl:ml-0 rtl:mr-auto': position === 'left' },
        'hidden md:self-center md:flex items-center md:mb-0 fixed w-full md:w-auto md:static justify-end left-0 rtl:left-auto rtl:right-0 bottom-0 p-3 md:p-0 md:justify-self-end',
      ]}
    >
      <div class="items-center flex justify-end w-full md:w-auto gap-6">
        {showToggleTheme && <ToggleTheme iconClass="w-6 h-6 md:w-5 md:h-5 md:inline-block" />}
        
        {
          updatedActions?.length ? (
            <span class="flex items-center">
              {updatedActions.map((btnProps) => (
                <Button {...btnProps} class="py-2.5 px-5.5 md:px-6 font-semibold shadow-none text-sm w-auto" />
              ))}
            </span>
          ) : (
            ''
          )
        }
        
        <div class="ml-2">
          <LanguageSwitcher />
        </div>
      </div>
    </div>
  </div>
</header>