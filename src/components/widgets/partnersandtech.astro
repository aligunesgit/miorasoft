        <div class="flex flex-wrap items-center gap-3">
          <Icon name="tabler:brand-react" class="w-7 h-7 text-cyan-500 opacity-60 hover:opacity-100 transition-opacity" title="React" />
          <Icon name="tabler:brand-tailwind" class="w-7 h-7 text-sky-500 opacity-60 hover:opacity-100 transition-opacity" title="Tailwind CSS" />
          <Icon name="tabler:brand-typescript" class="w-7 h-7 text-blue-600 opacity-60 hover:opacity-100 transition-opacity" title="TypeScript" />
          <Icon name="tabler:brand-nodejs" class="w-7 h-7 text-green-600 opacity-60 hover:opacity-100 transition-opacity" title="Node.js" />
          <Icon name="tabler:brand-git" class="w-7 h-7 text-orange-600 opacity-60 hover:opacity-100 transition-opacity" title="Git" />
