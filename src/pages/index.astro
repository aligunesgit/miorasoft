---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Brands from '~/components/widgets/Brands.astro';
import BookingWidget from '~/components/widgets/bookacall.astro';
import PartnersAndTech from '~/components/widgets/partnersandtech.astro';

import { getLangFromUrl, useTranslations } from '~/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const metadata = {
  title: 'AI-powered Shopify & Shopify Plus expert services in design, development, and marketing. Supporting startups to global retailers to grow and dominate worldwide',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    actions={[
      { text: t('home.hero.cta'), href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'MIORA Shopify Development' }}
  >
    <Fragment slot="title">
      {t('home.hero.title')}
    </Fragment>

    <Fragment slot="subtitle">
      {t('home.hero.subtitle')}
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->
  <Stats
    stats={[
      { title: t('home.stats.clients'), amount: '15+ YEARS' },
      { title: t('home.stats.stores'), amount: '300+' },
      { title: t('home.stats.revenue'), amount: 'MILLION' },
      { title: t('home.stats.solutions'), amount: 'ALL-IN-ONE' }
    ]}
  />

  <PartnersAndTech />

  <!-- Features Widget *************** -->
  <Features
    id="features"
    tagline={t('home.features.tagline')}
    title={t('home.features.title')}
    subtitle={t('home.features.subtitle')}
    items={[
      {
        title: t('home.feature.custom.title'),
        description: t('home.feature.custom.desc'),
        icon: 'tabler:brand-tailwind',
      },
      {
        title: t('home.feature.theme.title'),
        description: t('home.feature.theme.desc'),
        icon: 'tabler:components',
      },
      {
        title: t('home.feature.migration.title'),
        description:
          t('home.feature.migration.desc') + '<br />' +
          '• ' + t('home.feature.migration.woo') + '<br />' +
          '• ' + t('home.feature.migration.magento') + '<br />' +
          '• ' + t('home.feature.migration.bigcommerce') + '<br />' +
          '• ' + t('home.feature.migration.shopware') + '<br />' +
          '• ' + t('home.feature.migration.wordpress'),
        icon: 'tabler:list-check',
      },
      {
        title: t('home.feature.ai.title'),
        description: t('home.feature.ai.desc'),
        icon: 'tabler:rocket',
      },
      {
        title: t('home.feature.speed.title'),
        description: t('home.feature.speed.desc'),
        icon: 'tabler:arrows-right-left',
      },
      {
        title: t('home.feature.consulting.title'),
        description: t('home.feature.consulting.desc'),
        icon: 'tabler:bulb',
      },
    ]}
  />

  <!-- Content Widget **************** -->
  <Content
    isReversed
    tagline={t('home.content.tagline')}
    title={t('home.content.title')}
    items={[
      {
        title: t('home.content.item1.title'),
        description: t('home.content.item1.desc'),
      },
      {
        title: t('home.content.item2.title'),
        description: t('home.content.item2.desc'),
      },
      {
        title: t('home.content.item3.title'),
        description: t('home.content.item3.desc'),
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Colorful Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        {t('home.content.heading')}
      </h3>
      {t('home.content.subheading')}
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Features2 Widget - Industries **************** -->
  <Features2
    title={t('home.industries.title')}
    subtitle={t('home.industries.subtitle')}
    tagline={t('home.industries.tagline')}
    items={[
      {
        title: t('home.industry.retail.title'),
        description: t('home.industry.retail.desc'),
        icon: 'tabler:shopping-cart',
      },
      {
        title: t('home.industry.apparel.title'),
        description: t('home.industry.apparel.desc'),
        icon: 'tabler:hanger',
      },
      {
        title: t('home.industry.leather.title'),
        description: t('home.industry.leather.desc'),
        icon: 'tabler:briefcase',
      },
      {
        title: t('home.industry.jewelry.title'),
        description: t('home.industry.jewelry.desc'),
        icon: 'tabler:diamond',
      },
      {
        title: t('home.industry.industrial.title'),
        description: t('home.industry.industrial.desc'),
        icon: 'tabler:tools',
      },
      {
        title: t('home.industry.pod.title'),
        description: t('home.industry.pod.desc'),
        icon: 'tabler:printer',
      },
      {
        title: t('home.industry.sportswear.title'),
        description: t('home.industry.sportswear.desc'),
        icon: 'tabler:run',
      },
      {
        title: t('home.industry.carpets.title'),
        description: t('home.industry.carpets.desc'),
        icon: 'tabler:sofa',
      },
      {
        title: t('home.industry.pharmacy.title'),
        description: t('home.industry.pharmacy.desc'),
        icon: 'tabler:pills',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- BlogLatestPosts Widget ******* -->
  <BlogLatestPosts
    title={t('home.blog.title')}
    information={``}
  />

  <!-- Testimonials Widget ******************* -->
  <Testimonials
    title={t('home.testimonials.title')}
    subtitle={t('home.testimonials.subtitle')}
    testimonials={[
      {
        testimonial: `MIORA team transformed our outdated Shopify store into a high-performing e-commerce platform. Their custom theme development perfectly aligned with our brand vision, and the attention to detail in every aspect was exceptional. Our conversion rate increased by 35% within the first month!`,
        name: 'Mark Thompson',
        job: 'E-commerce Director',
        image: {
          src: 'https://images.unsplash.com/photo-1500648767791-00dcc994a43e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
          alt: 'Mark Thompson Image',
        },
      },
      {
        testimonial: `We hired MIORA for Shopify speed optimization, and the results were incredible. Our page load time went from 6 seconds to under 2 seconds. Their technical expertise and dedication to performance truly shine through their work. Customer satisfaction has never been higher!`,
        name: 'Emily Martinez',
        job: 'CEO',
        image: {
          src: 'https://images.unsplash.com/photo-1554151228-14d9def656e4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=772&q=80',
          alt: 'Emily Martinez Image',
        },
      },
      {
        testimonial: `MIORA team has an exceptional ability to understand business needs and translate them into functional design. They developed a custom Shopify theme for our non-profit that not only represents our mission but also drives donations. Their professionalism and commitment make them a development partner of exceptional caliber.`,
        name: 'Laura Simmons',
        job: 'Founder of an NGO',
        image: {
          src: 'https://images.unsplash.com/photo-1554727242-741c14fa561c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
          alt: 'Laura Simmons Image',
        },
      },
      {
        testimonial: `We entrusted MIORA with our complete Shopify development project, and the results were astounding. Their intuitive custom theme design enhanced user experience dramatically, leading to a 45% increase in engagement and a significant boost in sales. They truly understand the synergy of aesthetics, functionality, and conversion optimization.`,
        name: 'Alex Foster',
        job: 'Director of E-commerce',
        image: {
          src: 'https://images.unsplash.com/photo-1599566150163-29194dcaad36?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
          alt: 'Alex Foster Image',
        },
      },
      {
        testimonial: `MIORA team took our Shopify store vision and elevated it beyond imagination. Their custom theme development captured our brand essence perfectly, and their speed optimization work made our site lightning-fast. Working with them has been an inspiring and profitable journey. Our mobile conversion rate doubled!`,
        name: 'Jessica Collins',
        job: 'Product Manager',
        image: {
          src: 'https://images.unsplash.com/photo-1548142813-c348350df52b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=778&q=80',
          alt: 'Jessica Collins Image',
        },
      },
      {
        testimonial: `MIORA's ability to transform our Shopify requirements into a high-performing online store is nothing short of extraordinary. They handled our custom theme development and speed optimization with exceptional expertise. The site now loads in under 2 seconds and looks stunning on every device. Their dedication and technical skills make them an invaluable partner for any e-commerce project.`,
        name: 'Michael Carter',
        job: 'Online Store Manager',
        image: {
          src: 'https://images.unsplash.com/photo-1566492031773-4f4e44671857?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
          alt: 'Michael Carter Image',
        },
      },
    ]}
  />

  <!-- BookingWidget ******************* -->
  <BookingWidget
    id="book-call"
    title={t('home.booking.title')}
    subtitle={t('home.booking.subtitle')}
  />

  <!-- FAQs Widget ******************* -->
  <FAQs
    title={t('home.faqs.title')}
    tagline={t('home.faqs.tagline')}
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: t('home.faq1.q'),
        description: t('home.faq1.a'),
      },
      {
        title: t('home.faq2.q'),
        description: t('home.faq2.a'),
      },
      {
        title: t('home.faq3.q'),
        description: t('home.faq3.a'),
      },
      {
        title: t('home.faq4.q'),
        description: t('home.faq4.a'),
      },
      {
        title: t('home.faq5.q'),
        description: t('home.faq5.a'),
      },
      {
        title: t('home.faq6.q'),
        description: t('home.faq6.a'),
      },
      {
        title: t('home.faq7.q'),
        description: t('home.faq7.a'),
      },
    ]}
  />
</Layout>