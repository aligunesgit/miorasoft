---
import Layout from '~/layouts/PageLayout.astro';
import { getLangFromUrl, useTranslations } from '~/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const metadata = {
  title: t('portfolio.title') + ' | MIORA',
  description: t('portfolio.description'),
};

const projects = [
  {
    title: t('project.islamicwallart.title'),
    description: t('project.islamicwallart.desc'),
    image: 'https://raw.githubusercontent.com/aligunesgit/miorasoft/main/src/assets/images/islamicwallart/islamic1.png',
    category: t('category.artdecor'),
    categoryColor: 'bg-emerald-600',
    duration: '45 ' + t('portfolio.days'),
    feature: 'Figma to Shopify',
    link: 'https://islamicwallartstore.com',
    detailPage: '/casestudies#islamicwallart',
  },
  {
    title: t('project.rugtolia.title'),
    description: t('project.rugtolia.desc'),
    image: 'https://raw.githubusercontent.com/aligunesgit/miorasoft/main/src/assets/images/rugtolia/Rugtolia1.png',
    category: t('category.homedecor'),
    categoryColor: 'bg-teal-600',
    duration: '50 ' + t('portfolio.days'),
    feature: 'Figma to Shopify',
    link: 'https://rugtolia.com',
    detailPage: '/casestudies#rugtolia',
  },
  {
    title: t('project.bouletta.title'),
    description: t('project.bouletta.desc'),
    image: 'https://raw.githubusercontent.com/aligunesgit/miorasoft/main/src/assets/images/bouletta/bouletta1.png',
    category: t('category.leather'),
    categoryColor: 'bg-amber-700',
    duration: '40 ' + t('portfolio.days'),
    feature: 'Theme Customization',
    link: 'https://shop.bouletta.com',
    detailPage: '/casestudies#bouletta',
  },
  {
    title: t('project.labentra.title'),
    description: t('project.labentra.desc'),
    image: 'https://raw.githubusercontent.com/aligunesgit/miorasoft/main/src/assets/images/labentra/labentra1.png',
    category: t('category.tech'),
    categoryColor: 'bg-blue-600',
    duration: '40 ' + t('portfolio.days'),
    feature: 'Theme Customization',
    link: 'https://labentra.com/en-us',
    detailPage: '/casestudies#labentra',
  },
  {
    title: t('project.theswaf.title'),
    description: t('project.theswaf.desc'),
    image: 'https://theswaf.com/cdn/shop/files/saintmichaelsignetring.jpg?v=1741345155&width=1080',
    category: t('category.jewelry'),
    categoryColor: 'bg-purple-600',
    duration: '45 ' + t('portfolio.days'),
    feature: 'Custom Theme',
    link: 'https://theswaf.com',
    detailPage: '/casestudies#theswaf',
  },
  {
    title: t('project.diallure.title'),
    description: t('project.diallure.desc'),
    image: 'https://diallure.myshopify.com/cdn/shop/files/dial_all_products_2360x.jpg?v=1680739386',
    category: t('category.luxuryjewelry'),
    categoryColor: 'bg-amber-600',
    duration: '45 ' + t('portfolio.days'),
    feature: 'Custom Features',
    link: 'https://diallure.myshopify.com',
    detailPage: '/casestudies#diallure',
  },
  {
    title: t('project.sarayhali.title'),
