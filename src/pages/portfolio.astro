    category: t('category.fashion'),
    categoryColor: 'bg-indigo-600',
    duration: '30 ' + t('portfolio.days'),
    feature: 'Multi-Currency',
    link: 'https://emolos.com',
    detailPage: '/emolos',
  },
  {
    title: t('project.bilcee.title'),
    description: t('project.bilcee.desc'),
    image: 'https://raw.githubusercontent.com/aligunesgit/miorasoft/main/src/assets/images/bilcee/bilcee1.png',
    category: t('category.sportswear'),
    categoryColor: 'bg-red-600',
    duration: '30 ' + t('portfolio.days'),
    feature: 'Multi-Region',
    link: 'https://eu.bilcee.com',
    detailPage: '/emolos#bilcee',
  },
];
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-600 to-purple-700 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">{t('portfolio.hero.title')}</h1>
        <p class="text-xl md:text-2xl text-blue-100 mb-4">
          {t('portfolio.hero.subtitle')}
        </p>
        <p class="text-lg text-blue-200 max-w-3xl mx-auto mb-4">
          {t('portfolio.hero.desc')}
        </p>
        <p class="text-sm text-blue-300 max-w-2xl mx-auto">
          {t('portfolio.hero.note')}
        </p>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-12 bg-gray-50 dark:bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-4xl font-bold text-blue-600 mb-2">150+</div>
          <div class="text-gray-600 dark:text-gray-400">{t('portfolio.projects')}</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-blue-600 mb-2">45</div>
          <div class="text-gray-600 dark:text-gray-400">{t('portfolio.days')}</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-blue-600 mb-2">100%</div>
          <div class="text-gray-600 dark:text-gray-400">{t('portfolio.custom')}</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-blue-600 mb-2">10+</div>
          <div class="text-gray-600 dark:text-gray-400">{t('portfolio.industries')}</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Projects Grid -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">{t('portfolio.featured')}</h2>
        <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          {t('portfolio.featuredDesc')}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map((project) => (
          <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg overflow-hidden hover:shadow-2xl transition-shadow duration-300">
            <div class="relative h-64 overflow-hidden">
              <img 
                src={project.image} 
                alt={project.title}
                class="w-full h-full object-cover hover:scale-110 transition-transform duration-300"
                loading="lazy"
              />
              <div class="absolute top-4 left-4">
                <span class={`px-3 py-1 text-xs font-semibold text-white rounded-full ${project.categoryColor}`}>
                  {project.category}
                </span>
              </div>
            </div>
            
            <div class="p-6">
              <h3 class="text-xl font-bold mb-2 text-gray-900 dark:text-white">
                {project.title}
              </h3>
              <p class="text-gray-600 dark:text-gray-400 text-sm mb-4 line-clamp-3">
                {project.description}
              </p>
              
              <div class="flex items-center justify-between text-sm text-gray-500 dark:text-gray-400 mb-4">
                <span class="flex items-center">
                  <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                  </svg>
                  {project.duration}
                </span>
                <span class="px-2 py-1 bg-gray-100 dark:bg-slate-700 rounded text-xs">
                  {project.feature}
                </span>
              </div>
              
              <div class="flex gap-3">
                <a 
                  href={project.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex-1 text-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium"
                >
                  {t('common.viewproject')}
                </a>
                <a 
                  href={project.detailPage}
                  class="flex-1 text-center px-4 py-2 border border-blue-600 text-blue-600 dark:text-blue-400 rounded-lg hover:bg-blue-50 dark:hover:bg-slate-700 transition-colors text-sm font-medium"
                >
                  {t('common.learnmore')}
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-r from-blue-600 to-purple-600">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        {t('home.cta.title')}
      </h2>
      <p class="text-xl text-blue-100 mb-8">
        {t('home.cta.subtitle')}
      </p>
      <a 
        href={lang === 'tr' ? '/teklif-al' : '/getaquote'}
        class="inline-block px-8 py-4 bg-white text-blue-600 rounded-lg font-semibold hover:bg-gray-100 transition-colors"
      >
        {t('nav.getaquote')}
      </a>
    </div>
  </section>
</Layout>