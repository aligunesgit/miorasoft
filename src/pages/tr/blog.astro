---
import Layout from '~/layouts/PageLayout.astro';
import Grid from '~/components/blog/Grid.astro';
import Hero from '~/components/widgets/Hero.astro';
import { fetchPosts } from '~/utils/blog';

const metadata = {
  title: 'Blog - MIORA',
  description: 'Latest insights on Shopify development, e-commerce trends, and web optimization.',
};

const posts = await fetchPosts();
---

<Layout metadata={metadata}>
  <Hero>
    <Fragment slot="title">
      MIORA <span class="text-accent">Blog</span>
    </Fragment>
    <Fragment slot="subtitle">
      Latest insights on Shopify development, e-commerce optimization, and digital commerce trends.
    </Fragment>
  </Hero>

  <section class="px-4 py-16 mx-auto max-w-7xl lg:px-8 lg:py-20">
    
    <Grid posts={posts} />
  </section>
</Layout>