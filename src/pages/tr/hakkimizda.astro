---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';
import { getLangFromUrl, useTranslations } from '~/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const metadata = {
  title: t('about.title'),
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'About MIORA',
    }}
  >
    <Fragment slot="title">
      {t('about.hero.title')}<br />
    </Fragment>

    <Fragment slot="subtitle">
      {t('about.hero.subtitle')}
    </Fragment>
  </Hero>

  <!-- Features3 Widget - First Row ************** -->
  <Features3
    subtitle=""
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: t('about.service.shopify'),
        description: t('about.service.shopify.desc'),
        icon: 'tabler:template',
      },
      {
        title: t('about.service.plus'),
        description: t('about.service.plus.desc'),
        icon: 'tabler:template',
      },
      {
        title: t('about.service.speed'),
        description: t('about.service.speed.desc'),
        icon: 'tabler:template',
      },
    ]}
  />

  <!-- Features3 Widget - Second Row ************** -->
  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: t('about.service.migration'),
        description: t('about.service.migration.desc'),
        icon: 'tabler:template',
      },
      {
        title: t('about.service.theme'),
        description: t('about.service.theme.desc'),
        icon: 'tabler:template',
      },
      {
        title: t('about.service.ai'),
        description: t('about.service.ai.desc'),
        icon: 'tabler:template',
      },
      {
        title: t('about.service.dropship'),
        description: t('about.service.dropship.desc'),
        icon: 'tabler:template',
      },
      {
        title: t('about.service.chatgpt'),
        description: t('about.service.chatgpt.desc'),
        icon: 'tabler:template',
      },
      {
        title: t('about.service.consulting'),
        description: t('about.service.consulting.desc'),
        icon: 'tabler:template',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1504384308090-c894fdcc538d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Colorful Image',
    }}
  />

  <!-- Features2 Widget - Locations ************** -->
  <Features2
    title={t('about.locations.title')}
    tagline={t('about.locations.tagline')}
    columns={2}
    classes={{
      container: 'max-w-4xl mx-auto',
      panel: 'max-w-none',
    }}
    items={[
      {
        title: t('about.location.us.title'),
        description: t('about.location.us.address'),
      },
      {
        title: t('about.location.turkey.title'),
        description: t('about.location.turkey.address'),
      },
    ]}
  />

  <!-- Features2 Widget - Support ************** -->
  <Features2
    title={t('about.support.title')}
    tagline={t('about.support.tagline')}
    columns={2}
    items={[
      {
        title: t('about.support.chat'),
        description: t('about.support.chat.desc'),
        icon: 'tabler:messages',
      },
      {
        title: t('about.support.call'),
        description: t('about.support.call.desc'),
        icon: 'tabler:headset',
      },
    ]}
  />
</Layout>