---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Layout from '~/layouts/PageLayout.astro';
import { useTranslations } from '~/i18n/utils';

const t = useTranslations('en');

const metadata = {
  title: t('services.title'),
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    tagline={t('services.title')}
    title="Comprehensive Shopify Development Services"
    subtitle={t('services.subtitle')}
    actions={[{ 
      variant: 'primary', 
      text: t('common.getstarted'), 
      href: '/getaquote' 
    }]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Shopify Services',
    }}
  />

  <!-- Stats Widget ****************** -->
  <Stats
    stats={[
      { title: 'Years Empowering Online Sales', amount: '15+ YEARS' },
      { title: 'Stores Created', amount: '300+' },
      { title: 'Revenue Impact', amount: 'MILLION $' },
      { title: 'E-commerce Solutions', amount: 'ALL-IN-ONE' }
    ]}
  />

  <!-- Features2 Widget ************** -->
  <Features2
    id="services"
    tagline="Features"
    title="Wide Range of Shopify Development Services"
    subtitle="Ready to design, develop, or scale on Shopify? We have the solution you need."
    columns={2}
    items={[
      {
        title: t('services.shopify.title'),
        description: t('services.shopify.description'),
        icon: 'tabler:code',
      },
      {
        title: 'Custom Shopify Theme Development',
        description: 'Custom Shopify setups for ambitious retailers who demand more. Pixel-perfect themes designed specifically for your brand.',
        icon: 'tabler:palette',
      },
      {
        title: t('services.migration.title'),
        description: t('services.migration.description'),
        icon: 'tabler:refresh',
      },
      {
        title: 'AI Development and Integration',
        description: 'Our AI integration services offer intelligent, future-ready solutions. From generative AI to custom chatbots.',
        icon: 'tabler:robot',
      },
      {
        title: t('services.optimization.title'),
        description: t('services.optimization.description'),
        icon: 'tabler:gauge',
      },
      {
        title: t('services.consulting.title'),
        description: t('services.consulting.description'),
        icon: 'tabler:users',
      },
    ]}
  />

  <!-- Content Widget **************** -->
  <Content
    isReversed
    items={[
      {
        title: 'Expert Shopify Development',
        description: 'Our developers can create any functionality your store needs.',
        icon: 'tabler:wand',
      },
      {
        title: 'Proven Track Record',
        description: '300+ successful Shopify stores launched and optimized.',
        icon: 'tabler:award',
      },
      {
        title: 'Fast Delivery',
        description: 'Average launch time of 45 days for complete custom stores.',
        icon: 'tabler:clock',
      },
      {
        title: '24/7 Support',
        description: 'Dedicated support team available whenever you need us.',
        icon: 'tabler:headset',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Shopify Development Team',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Why Choose MIORA?
      </h3>
      <p>
        With over 15 years of experience in e-commerce development, we bring expertise, 
        dedication, and innovation to every project. Our team specializes in creating 
        custom Shopify solutions that drive results.
      </p>
    </Fragment>
  </Content>

  <!-- CallToAction Widget *********** -->
  <CallToAction
    title={t('home.cta.title')}
    subtitle={t('home.cta.subtitle')}
    actions={[
      {
        variant: 'primary',
        text: t('nav.getaquote'),
        href: '/getaquote',
      },
    ]}
  />
</Layout>